@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>

<form method="post" asp-action="Delete">
    <div class="mb-3">
        <label for="FirstName">FirstName</label>
        <input asp-for="FirstName" type="text" name="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="LastName">LastName</label>
        <input type="text" asp-for="LastName" name="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" name="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Phone">Phone</label>
        <input type="text" asp-for="Phone" name="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" name="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>
