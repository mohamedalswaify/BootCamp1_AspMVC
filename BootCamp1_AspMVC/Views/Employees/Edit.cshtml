@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<form method="post" asp-action="Edit">
    <div class="mb-3">
        <label for="FirstName">FirstName</label>
        <input asp-for="FirstName" type="text" name="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="LastName">LastName</label>
        <input type="text" asp-for="LastName" name="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" name="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Phone">Phone</label>
        <input type="text" asp-for="Phone" name="Phone" class="form-control" />
    </div>


    <div class="mb-3">
        <label for="Username">Username</label>
        <input type="text" asp-for="Username" name="Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Password">Password</label>
        <input type="text" asp-for="Password" name="Password" class="form-control" />
    </div>







    <div class="mb-3">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" name="Address" class="form-control" />
    </div>


    <div class="mb-3">
        <label for="Islock">Islock</label>
        <input type="checkbox" asp-for="Islock" name="Islock" class="form-check" />
    </div>



    <div class="mb-3">
        <label for="DepartmentId">Category</label>

        <select asp-for="DepartmentId" name="DepartmentId" class="form-select" asp-items="@ViewBag.DepartmentList">
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>
