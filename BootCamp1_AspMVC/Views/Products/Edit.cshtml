@model Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>

<form method="post" asp-action="Edit">
    <div class="mb-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="ProductName" name="ProductName" class="form-control" />
    </div>


    <div class="mb-3">
        <label for="Price">Price</label>
        <input type="text" asp-for="Price" name="Price" class="form-control" />
    </div>



    <div class="mb-3">
        <label for="Qty">Qty</label>
        <input type="text" asp-for="Qty" name="Qty" class="form-control" />
    </div>


    <div class="mb-3">
        <label for="Description">Description</label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label for="CategoryId">Category</label>

        <select asp-for="CategoryId" name="CategoryId" class="form-select" asp-items="@ViewBag.CategoryList">
           

        </select>
    </div>


    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>
